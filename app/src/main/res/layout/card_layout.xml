<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id = "@+id/card_container_linearlayout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:id = "@+id/card_face"
                android:layout_margin="5dp"
                android:layout_height="@dimen/card_height"
                android:layout_width = "@dimen/card_content_width"
                android:background="@drawable/card_face_drawable"
                >

                <ImageView
                    android:id="@+id/card_face_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top"
                    android:layout_margin="@dimen/card_ImageView_margin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "EVENT"
                    style="@style/Text.card_event"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_margin="5dp"
                android:id = "@+id/card_details"
                android:layout_height="@dimen/card_height"
                android:layout_width = "@dimen/card_desc_width"
                android:background="@drawable/card_desc_drawable"
                >

                <TextView
                    android:id = "@+id/card_desc_text"
                    android:layout_width = "match_parent"
                    style="@style/Text.textView_card"
                    android:background="@drawable/card_content_area_drawable"

                    />

                <Button
                    style="@style/card_buttons"
                    android:layout_gravity="start|bottom"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="30dp"/>
                <Button
                    style="@style/card_buttons"
                    android:layout_gravity="center|bottom"
                    android:layout_margin="10dp"/>
                <Button
                    style="@style/card_buttons"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="30dp"/>

            </FrameLayout>

        </LinearLayout>



</merge>