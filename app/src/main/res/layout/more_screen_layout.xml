<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/more_screen_linearlayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background = "#EEEEEE"
        >

        <TextView
            android:id = "@+id/more_username_textview"
            android:text = "Hello User"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin = "@dimen/hello_user_margin"
            android:textSize="@dimen/hello_user_textSize"
            />

        <ImageView
            android:id = "@+id/more_userphoto_imageview"
            android:background="@color/JunctionPurple"
            android:layout_height="@dimen/profile_pic_height"
            android:layout_width="@dimen/profile_pic_width"
            android:layout_gravity="center|left"
            android:layout_margin = "@dimen/profile_pic_margin"
            />


    </FrameLayout>

    <ScrollView
        android:id = "@+id/more_screen_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id = "@+id/more_screen_contets_linearlayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:id = "@+id/profile_settings"
                android:text = "Your Profile"
                style="@style/Text.moreScreen_headings"
                />

            <Button
                android:id = "@+id/personal_details"
                android:text = "Personal Details"
                style="@style/moreScreen_Buttons"
                android:stateListAnimator="@null"
                />

            <Button
                android:id = "@+id/autofill_settings"
                android:text = "Autofill Settings"
                style="@style/moreScreen_Buttons"
                android:stateListAnimator="@null"

                />
            <Space
                android:layout_height="5dp"
                android:layout_width = "match_parent"/>
            <TextView
                android:id = "@+id/app_settings"
                android:text = "App Settings"
                style="@style/Text.moreScreen_headings"
                />



            <Button
                android:id = "@+id/event_history"
                android:text = "Events You Attended"
                style="@style/moreScreen_Buttons"
                android:stateListAnimator="@null"
                />

            <Button
                android:id = "@+id/your_interests"
                android:text = "Your Interests"
                style="@style/moreScreen_Buttons"
                android:stateListAnimator="@null"
                />

            <Button
                android:id = "@+id/app_theme"
                android:text = "Theme"
                style="@style/moreScreen_Buttons"
                android:stateListAnimator="@null"
                />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
